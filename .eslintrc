{
  "root": true,
  "extends": ["eslint:all", "plugin:@typescript-eslint/all", "prettier"],
  "parserOptions": {
    "project": ["./packages/*/tsconfig.json"]
  },
  "rules": {
    "func-style": ["error", "declaration"],
    "no-warning-comments": "warn"
  },
  "ignorePatterns": [
    "**/__tests__/**/*",
    "jest.config.js",
    "rollup.config.base.js",
    "rollup.config.js"
  ]
}
